{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls-root",
        "compile_commands.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    },
    "rubocop": {
      "command": "rubocop",
      "args": [
        "--lsp"
      ],
      "filetypes": [
        "ruby"
      ],
      "rootPatterns": [
        ".git",
        "Gemfile"
      ],
      "requireRootPattern": true
    },
  },
  "coc.preferences.formatOnSave": true,
  "snippets.ultisnips.pythonPrompt": false
}
